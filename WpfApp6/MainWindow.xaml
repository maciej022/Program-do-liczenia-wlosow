<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oblicz Liczbę Włosów" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Obwód głowy (cm):" />
            <TextBox Name="txtObwod" Width="200" Margin="0,5,0,15"/>
            <TextBlock Text="Wysokość czoła (cm):" />
            <TextBox Name="txtWysokoscCzola" Width="200" Margin="0,5,0,15"/>
            <TextBlock Text="Gęstość włosów (ilość włosów na cm²):" />
            <TextBox Name="txtGestosc" Width="200" Margin="0,5,0,15"/>
            <Button Content="Oblicz liczbę włosów" Click="Oblicz_Click" Width="200" Margin="0,15"/>
            <Button Content="Reset" Click="Reset_Click" Width="200" Margin="0,5"/>
            <TextBlock Name="txtWynik" FontWeight="Bold" Margin="0,15"/>
        </StackPanel>
    </Grid>
</Window>
